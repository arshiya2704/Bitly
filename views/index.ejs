<!DOCTYPE html>
<html>
  <head>
    <title>Bitly</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>


  </head>



  <body>

    <%
      var shortUrl = shortUrl;
      var url =url;
      var trenddata=trenddata;
      var errormsg =errormsg;
    %>

    <button hidden="true" id="watchbutton"></button>
  <div class="col-md-12" style="background-color: black">
      <div class="col-md-3" >
        <br>
        <img class="img-responsive" src="https://getpiper.com/wp-content/uploads/2015/10/Piper-Logo.png" width="300">
        <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
      </div>
      <div class="col-md-6" >
          <br><br><br><br><br><br><br><br><br><br><br>
        <h1 style="color: red">Welcome to Ppiper</h1>
        <p style="color: red">Paste your long URL to shorten it</p>
        <form action="short" method="post">
          <textarea name="url" rows="2" cols="70"><%= url %></textarea>
          <button style="color: chocolate" type="submit">Submit</button><br><br>
            <% if(errormsg){%>
              <img class="img-responsive" src="error.png" width="30">
              <p style="color: red"><%= errormsg %></p>
             <% } %>
          <%if(shortUrl){%>
          <textarea rows="2" cols="80" disabled>ppiper.hopto.org/<%= shortUrl %></textarea>
          <%}%>
        </form>
        <br><br><br><br><br><br><br><br>
      </div>
      <div class="col-md-3">
        <nav class="navbar navbar-custom">
          <img class="img-responsive" src="trending.jpg" width="370">
          <br>
          <div id="list"><ul></ul></div>
          <% if(trenddata){ %>
          <% trenddata.forEach(function(item) {%>
            <ul><a href= <%=item.longUrl%> > <li><%=item.longUrl%> | <%= item.count %></li> </a> </ul>
          <% })%>
          <% }%>
